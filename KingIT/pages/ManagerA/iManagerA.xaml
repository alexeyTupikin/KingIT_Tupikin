<Page x:Class="KingIT.pages.ManagerA.iManagerA"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KingIT.pages.ManagerA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="iManagerA">

    <Grid>
        <DataGrid x:Name="dataGrid" Margin="10,50,10,100" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn MinWidth="120" Binding="{Binding title}" Header="Название ТЦ"/>
                <DataGridTextColumn MinWidth="50" Binding="{Binding address}" Header="Город"/>
                <DataGridTextColumn MinWidth="30" Binding="{Binding ResultAll}" Header="Окупаемость ТЦ (в %)"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
