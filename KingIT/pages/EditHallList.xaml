<Page x:Class="KingIT.pages.EditHallList"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:local="clr-namespace:KingIT.pages"
mc:Ignorable="d"
d:DesignHeight="450" d:DesignWidth="800"
Title="EditHallList">
    <Grid>
        <TextBlock Text="Редактирование ТЦ"
Width="150"
Height="25"
FontWeight="Bold"
Margin="325,24,325,401"/>
        <StackPanel Width="400"
Height="350"
Margin="0,54,0,46"
HorizontalAlignment="Center">
            <TextBlock
Text="Номер этажа"/>
            <TextBox
x:Name="FloorBox"/>
            <TextBlock
Text="Номер павильона"/>
            <TextBox
x:Name="NumberBox"/>
            <TextBlock
Text="Площадь"/>
            <TextBox
x:Name="AreaBox"/>
            <TextBlock
Text="Коэфицент"/>
            <TextBox
x:Name="FactorBox"/>
            <TextBlock
Text="Стоимость за кв2"/>
            <TextBox
x:Name="CostBox"/>
            <TextBlock
Text="Статус"/>
            <ComboBox
x:Name="StatusBox"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center"
Orientation="Horizontal"
VerticalAlignment="Top"
Width="220"
Height="51" Margin="0,329,0,0">
            <Button
Content="Назад"
Click="Exit"
Margin="0"
Width="100"/>
            <Button
Content="Сохранить"
Click="Save"
Width="100"/>
        </StackPanel>
    </Grid>
</Page>